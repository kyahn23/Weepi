<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.weepi.repository.mapper.ABoardMapper">
	<resultMap id="AboardMap" type="ABoard">
		<result column="no" property="no" />
		<result column="writer" property="writer" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
		<result column="view_cnt" property="viewCnt" />
	</resultMap>

	<!-- 전체 목록 가져오기 -->
	<select id="alist" resultMap="AboardMap">
		select *
		from a_board
		order by no desc
	</select>

	<insert id="awrite" useGeneratedKeys="true" keyProperty="no" parameterType="ABoard">
		insert into a_board (title,writer,content)
		values
		(#{title}, #{writer}, #{content})
	</insert>

	<!-- 조회수 1 증가 -->
	<update id="viewCnt" parameterType="int">
		update a_board
		set view_cnt = view_cnt+1
		where no=#{no}
	</update>

	<select id="adetail" parameterType="int" resultMap="AboardMap">
		select *
		from a_board
		where no = #{no}
	</select>

	<delete id="adelete" parameterType="int">
		delete from a_board
		where no = #{no}
	</delete>

	<update id="aupdate" parameterType="ABoard">
		update a_board
		set title = #{title}, content = #{content}
		where no = #{no}
	</update>



</mapper>



